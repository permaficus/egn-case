                        },
                        "titles": {
                            "type": "array",
                            "example": ["Dragon Ball", "Sinchan"]
                        }
                    }
                }
            }
        },
        "AddNewMember": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string",
                    "example": "M001"
                },
                "name": {
                    "type": "string",
                    "example": "Wikojo"
                }
            }
        },
        "NewMemberResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "OK"
                },
                "code": {
                    "type": "integer",
                    "example": 201
                },
                "details": {
                    "properties": {
                        "id": {
                            "type": "string",
                            "example": "66713c5fd2abb5ba15a0ec9c"
                        },
                        "code": {
                            "type": "string",
                            "example": "M001"
                        },
                        "name": {
                            "type": "string",
                            "example": "Wikojo"
                        }
                    }
                }
            }
        },
