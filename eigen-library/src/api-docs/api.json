                            },
                            "example": [
                                {
                                    "code": "BOOK-1",
                                    "title": "Si Kancil Coder Sejati"
                                },
                                {
                                    "code": "BOOK-2",
                                    "title": "Si Musang Belajar Go"
                                }
                            ]
                        }
                    }
                }
            }
