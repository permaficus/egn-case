    "paths": {
        "/api/v1/authors": {
            "get": {
                "tags": [
                    "Authors"
                ],
                "summary": "Author List",
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/AuthorList"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Authors"
                ],
                "summary": "Add New Author",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/AddNewAuthor"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/NewAuthorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/books": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Book List",
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/BookList"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Books"
                ],
                "summary": "Add New Book",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/AddNewBook"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/NewBookResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "AuthorList": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "OK"
                },
                "code": {
                    "type": "integer",
                    "example": 200
                },
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/AuthorListDetails"
                    }
                }
            }
        },
        "AuthorListDetails": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "66713c5fd2abb5ba15a0ec9c"
                },
                "name": {
                    "type": "string",
                    "example": "Sir Conan Doyle"
                }
            }
        },
        "AddNewAuthor": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "J.K Rowling"
                }
            }
        },
        "NewAuthorResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "OK"
                },
                "code": {
                    "type": "integer",
                    "example": 201
                },
                "data": {
                    "type": "object",
                    "properties": {
                        "author": {
                            "type": "object",
