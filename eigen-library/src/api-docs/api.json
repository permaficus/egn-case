                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Members"
                ],
                "summary": "Add New Membership",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/AddNewMember"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/NewMemberResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/transaction": {
            "post": {
                "tags": [
                    "Borrowing & Returning"
                ],
                "summary": "New Borrowing Transaction",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/AddNewBorrowing"
