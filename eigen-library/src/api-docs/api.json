                "data": {
                    "properties": {
                        "id": {
                            "type": "string",
                            "example": "66713c5fd2abb5ba15a0ec9c"
                        },
                        "code": {
                            "type": "string",
                            "example": "DK-007"
                        },
                        "title": {
                            "type": "string",
