                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/AddNewBorrowingResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "On Penalized Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/NotAllowedResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
