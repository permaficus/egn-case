                                "id": {
                                    "type": "string",
                                    "example": "66713c5fd2abb5ba15a0ec9c"
                                },
                                "name": {
                                    "type": "string",
                                    "example":"J.K Rowling"
                                }
                            }
                        }
                    }
                }
            }
        },
