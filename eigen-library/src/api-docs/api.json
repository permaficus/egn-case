                    }
                }
            },
            "post": {
                "tags": [
                    "Books"
                ],
                "summary": "Add New Book",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/AddNewBook"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/NewBookResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/members": {
            "get": {
                "tags": [
                    "Members"
                ],
                "summary": "Member List",
                "responses": {
                    "200": {
                        "description": "Success Response",
