                },
                "code": {
                    "type": "integer",
                    "example": 200
                },
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/AuthorListDetails"
                    }
                }
            }
        },
        "AuthorListDetails": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "66713c5fd2abb5ba15a0ec9c"
                },
                "name": {
                    "type": "string",
                    "example": "Sir Conan Doyle"
                }
            }
        },
        "AddNewAuthor": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "J.K Rowling"
                }
            }
        },
        "NewAuthorResponse": {
            "type": "object",
