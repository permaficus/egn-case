{
  "ts-node": {
    "require": ["tsconfig-paths/register"]  
  },
  "compilerOptions": {
    "target": "ES2019",                                                               
    "module": "commonjs",                               
    "rootDir": "./",                                     
    "allowJs": true,                                     
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": { "@/*": ["src/*"] }
  },
  "exclude": ["node_modules"]
}
